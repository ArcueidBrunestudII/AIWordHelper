<Window x:Class="AIWordHelper.Views.AIResponseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Response"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        MaxWidth="500"
        MinWidth="200"
        MouseRightButtonDown="Window_MouseRightButtonDown">
    <Border Background="#F5F5F5" CornerRadius="8" BorderBrush="#CCCCCC" BorderThickness="1"
            Margin="5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title bar for dragging -->
            <Border Grid.Row="0" Background="#E8E8E8" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="10,5">
                    <TextBlock Text="AI 回复" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock x:Name="TxtStatus" HorizontalAlignment="Right"
                               Foreground="#666" FontSize="11"/>
                </Grid>
            </Border>

            <!-- Content area -->
            <ScrollViewer Grid.Row="1" MaxHeight="400" VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <TextBox x:Name="TxtContent"
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Margin="10"
                         FontSize="14"
                         Foreground="#333"
                         SelectionBrush="#3399FF"/>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
